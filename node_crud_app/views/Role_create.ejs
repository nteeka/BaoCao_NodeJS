<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
             <div class="card shadow">
                   <div class="card-header bg-primary">
                       <h3 class="text-light">Create New Role</h3>
                   </div>
                   <div class="card-body p-4">
                         <form action="/role/createRole" method="post" id="add-form">
                              <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" />
                              </div>
                              <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Create Role" class="btn btn-primary btn-lg"/>
                              </div>
                         </form>
                         <% if (message) { %>
                          <div class="alert alert-dismissible fade show alert-<%= message.type %>"
                           role="alert">
                              <button class="btn-close" type="button" data-bs-dismiss="alert"
                              aria-label="Close"></button>
                              <strong><%= message.message %></strong>
                          </div>
                      <% } %>
                   </div>
             </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
    