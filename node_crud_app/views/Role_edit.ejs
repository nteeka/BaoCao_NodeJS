<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
             <div class="card shadow">
                   <div class="card-header bg-success">
                       <h3 class="text-light">Edit Role(<%= role.name %>)</h3>
                   </div>
                   <div class="card-body p-4">
                         <form action="/role/updateRole/<%= role._id %>" method="post" id="add-form">
                              <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" value="<%= role.name %>" class="form-control form-control-lg" placeholder="Enter name" required/>
                              </div>
                              <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="update role" class="btn btn-success btn-lg"/>
                              </div>
                         </form>
                   </div>
             </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
    